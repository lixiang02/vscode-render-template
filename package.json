{
	"name": "mcfedcra-render",
	"displayName": "mcfedcra-render",
	"description": "",
	"version": "0.0.9",
	"publisher": "mcfedcra-render",
	"engines": {
		"vscode": "^1.49.0"
	},
	"activationEvents": [
		"onView:mcfedMenuViewModule"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Mcf",
			"properties": {
				"mcf.testconfig": {
					"type": "string",
					"default": "aaa",
					"description": "this is a test config"
				},
				"mcf.mainModuleName": {
					"type": "string",
					"default": "@user-center/app",
					"description": "it is main module in lerna project"
				}
			}
		},
		"commands": [
			{
				"command": "mcfedMenuViewModule.showMainView",
				"title": "显示模块管理界面"
			},
			{
				"command": "mcfedMenuViewModule.createModule",
				"title": "创建模块"
			},
			{
				"command": "mcfedMenuViewModule.refreshEntry",
				"title": "更新数据",
				"icon": "resources/light/refresh.svg"
			},
			{
				"command": "mcfedMenuViewModule.buildModules",
				"title": "构建模块"
			},
			{
				"command": "mcfedMenuViewModule.publishModules",
				"title": "发布模块"
			},
			{
				"command": "mcfedMenuViewModule.removeModules",
				"title": "移除模块"
			}
		],
		"views": {
			"mcf-menu": [
				{
					"id": "mcfedMenuViewModule",
					"name": "模块列表"
				},
				{
					"id": "mcfedMenuViewConfig",
					"name": "配置"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mcf-menu",
					"title": "mcf menu",
					"icon": "images/menus.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "mcfedMenuViewModule.createModule",
					"when": "view == mcfedMenuViewModule",
					"group": "navigation"
				},
				{
					"command": "mcfedMenuViewModule.showMainView",
					"when": "view == mcfedMenuViewModule",
					"group": "navigation"
				},
				{
					"command": "mcfedMenuViewModule.refreshEntry",
					"when": "view == mcfedMenuViewModule",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"when": "view == mcfedMenuViewModule",
					"command": "mcfedMenuViewModule.buildModules",
					"group": "navigation"
				},
				{
					"when": "view == mcfedMenuViewModule",
					"command": "mcfedMenuViewModule.publishModules",
					"group": "navigation"
				},
				{
					"when": "view == mcfedMenuViewModule",
					"command": "mcfedMenuViewModule.removeModules",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/shelljs": "^0.8.8",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@mcfed/cra-render": "^0.0.3",
		"fs": "^0.0.1-security",
		"path": "^0.12.7",
		"shelljs": "^0.8.4"
	}
}
